<?xml version='1.0' encoding='utf-8'?>
<widget id="com.toni.jwreading" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>App JW Reading</name>
    <description>
        JW Reading app
    </description>
    <author email="contact@jwreading.com" href="http://www.jwreading.com">
       JW Reading
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <icon src="icon.png" />
</widget>